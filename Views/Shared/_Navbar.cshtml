@inject IHttpContextAccessor HttpContextAccessor
@{
    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("userId");
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName") ?? "Guest";
    var profileImage = HttpContextAccessor.HttpContext?.Session.GetString("ProfileImage");

    // Safely get eventId from ViewBag if it exists
    int? eventId = ViewBag.EventId as int?;
}

<nav class="navbar navbar-expand-lg navbar-dark border-bottom shadow-sm">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
            <img src="/images/theicon.png" alt="GotHome" width="32" class="me-2" />
            <img src="/images/gothomeicon.png" alt="GotHome" width="128" />
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav align-items-lg-center">

                @if (userId != null)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Events" asp-action="EventsIndex">All Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Events" asp-action="NewEventsForm">Create Event</a>
                    </li>

                    @* Chat Hub link only shows if eventId exists *@
                    @if (eventId != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Events" asp-action="Chat" asp-route-eventId="@eventId">Chat Hub</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Location" asp-action="Track">Live Track</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <img src="@profileImage" alt="Profile" class="rounded-circle me-2" width="32" height="32" />
                            <span>@userName</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Events" asp-action="NewEventsForm">Create Event</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="ConfirmLogout">Logout</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="#features">How It Works</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="LoginForm">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-magenta text-light ms-3" asp-controller="Account" asp-action="RegisterForm">Get Started</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</nav>