@model RegisterFormViewModel

@{
    ViewData[index: "Title"] = "Register";
}

<style>
    .register-page {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding-bottom: 4rem;
    }
    .register-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        max-width: 900px;
        width: 100%;
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: rgb(27, 33, 38);
    }

    .register-left,
    .register-right {
        flex: 1 1 50%;
        padding: 2rem;
    }

    @@media screen and (max-width: 768px) {
        .register-container {
            flex-direction: column;
        }

        .register-left,
        .register-right {
            flex: 1 1 100%;
            padding: 1.5rem;
        }

        .register-left h1 {
            font-size: 2.2rem;
        }

        .register-right h3.register-heading {
            font-size: 1.6rem;
        }

        .btn {
            font-size: 1rem;
        }
    }
</style>

<div asp-validation-summary="All" class="text-danger"></div>

<div class="register-page">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="register-container">
        <!-- left side -->
        <div class="register-left display-1"
            style="display: flex; justify-content: center; align-items: center; margin: 0; flex-direction: column">
            <img src="/images/theicon.png" alt="GotHome" width="100" />
            <p class="text-center" style="font-size: 2.5rem; font-weight: 600;">Create your<br>GotHome Account</p>
        </div>

        <!-- right side -->
        <div class="register-right">
            <form asp-action="ProcessRegister" asp-controller="Account" method="post">
                <div class="form-group mb-3">
                    <label asp-for="UserName">UserName</label>
                    <input asp-for="UserName" class="form-control" placeholder="Your name" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" autocomplete="email" placeholder="Your email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control"
                        placeholder="Repeat your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>

            <hr class="my-4" />
            <p class="text-center">Already have an account?</p>
            <a href="/Account/Login" class="btn btn-outline-secondary w-100">Log In</a>
        </div>
    </div>
</div>