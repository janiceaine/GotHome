@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center display-1 m-3">
    <img src="/images/gothome2.png" alt="GotHome" width="400" />
</div>

<style>
    body {
        background-image:
            url('/images/night1.jpeg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        color: #f5f5f5;
        font-family: 'Segoe UI', sans-serif;
    }

    .hero {
        padding: 16rem 2rem;
        text-align: center;
        background: url('/images/ratioed.png') no-repeat center center;
        background-size: contain;
    }

    .hero h1 {
        font-size: 3rem;
        font-weight: 300;
        color: #ffffff;
    }

    .hero p {
        font-size: 1.25rem;
        color: #cccccc;
    }

    .btn-custom {
        background-color: #d94fcf;
        border-radius: 50px;
        padding: 0.75rem 2rem;
        font-weight: 500;
        border: none;
    }

    .feature-card {
        background-color: #1f1f1f;
        border-radius: 1rem;
        padding: 2rem;
        color: #e0e0e0;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.05);
    }

    .footer {
        background-color: #0a0a0a;
        padding: 2rem;
        text-align: center;
        font-size: 0.9rem;
        color: #888;
    }
</style>

