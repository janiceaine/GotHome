@model EventDetailsViewModel
@{

    var currentUser = Context.Session.GetInt32("userId");
    ViewBag.EventId = Model.Id;

}
<div class="card shadow my-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="display-6 m-0">@Model.Title</h2>
        <div>
            <a asp-action="EditEvent" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">Edit</a>
            <a asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete</a>
        </div>
    </div>
    <div class="card-body">
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Location:</strong> @Model.Location</p>
        <p><strong>Start Time:</strong> @Model.StartTime.ToString("MMMM dd, yyyy HH:mm")</p>
        <p><strong>Host:</strong> @Model.UploadedBy</p>

        <hr />
        @if (Model.RSVPs.Any(r => r.AttendanceStatus == "Host" && r.UserId == currentUser && r.EventId == Model.Id))
        {
            <h5>Invitation</h5>
            <a href="/events/@Model.Id/send" title="send an invite" class="btn btn-sm btn-primary">Send an invite</a>
        }
        @*@
        @if (Model.Invites.Any())
        {
            <ul>
                @foreach (var i in Model.Invites)
                {
                    <li>
                        <strong>@i.RecipientEmail</strong>
                        @if (!string.IsNullOrEmpty(i.SenderName)) { <span>from @i.SenderName</span> }
                        @if (!string.IsNullOrEmpty(i.Message)) { <span> - "@i.Message"</span> }
                        <span> (@i.SentAt.ToString("g"))</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No invites yet.</p>
        } *@

        <h5>RSVPs</h5>
        @if (Model.RSVPs.Any())
        {
            <ul>
                @foreach (var r in Model.RSVPs)
                {
                    if (r.UserId != currentUser && r.AttendanceStatus != "Host")
                    {
                        <li>@r.UserName (@r.RespondedAt.ToString("g")) @r.AttendanceStatus</li>
                    }
                    else if (r.AttendanceStatus != "Host")
                    {
                        <li>Me (@r.RespondedAt.ToString("g")) @r.AttendanceStatus <a href="/events/@Model.Id/rsvping"
                                title="change my RSVP" class="btn btn-sm btn-primary">Change my RSVP</a></li>
                    }
                }
            </ul>
        }
        else
        {
            <p>No RSVPs yet. <a href="/events/@Model.Id/rsvping" title="change my RSVP"
                    class="btn btn-sm btn-primary">RSVP</a></p>
        }

        <h5>Live Tracking</h5>
        @if (Model.UserId==currentUser)
        {
           if(Model.IsLiveTracking){
                <a class="btn btn-primary" href="/location">View Live Tracking</a>
            }
            else{
                 <a class="btn btn-primary">Not active</a>
            }
        }
        else
        {
            if(Model.IsLiveTracking){
                <a class="btn btn-primary">Start My Tracking</a>
            }
            else{
                <p>Not active</p>
            }
        }
    </div>
</div>